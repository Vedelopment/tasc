<!-- Form for feedback edit -->
<div class="container">
  <div class="row">
    <div class="col m6 form form-style">
      <h4><b>EDIT FEEDBACK</b></h4>
      <%= form_for @feedback, url: {action: 'update', id: @feedback.id}, validate: true do |f| %>
      <div class="col m12">
        Score:
        <br>
        <%= f.number_field :score, class: "form-control" %>
      </div>
      <div class="col m12">
        Feedback for the student:
        <br>
        <%= f.text_area :content, class: "form-control materialize-textarea" %>
      </div>
      <div class="col m6 offset-m3">
        <br>
        <%= f.submit "Save feedback", class: "waves-effect waves-light btn form-button" %>
        <br><br>
      </div>
      <% end %>
    </div>
    <!-- Tabbed Card for Assignment/Submission View -->
    <div class="col m6">
      <br>
      <div class="row">
        <div class="card">
          <div class="card-content">
            <p></p>
          </div>
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab"><a href="#test4">Assignment</a></li>
              <li class="tab"><a class="active" href="#test5">Submission</a></li>
            </ul>
          </div>
          <div class="card-content grey lighten-4">

            <!-- Section for showing the assignment. -->
            <div id="test4">
              <div class="row">
                <h4><%= @assignment.title %></h4>
                <h6><%= @assignment.due_date.strftime("Due on: %m/%d/%Y") %></h6>
                <hr>
                <h5>Instructions:</h5>
                <p><%= @assignment.instructions %></p>
                <hr>

                <div class="left">
                  Estimated duration: <%= @assignment.duration %>
                </div>
                <div class="right">
                  <%= @assignment.assign_date.strftime("Assigned on: %m/%d/%Y") %>
                </div>
              </div>

            </div>

            <!-- Section for showing the assignment -->
            <div id="test5">
              <div class="row">
                <h5 class="center"><%= @submission.student.first_name %>'s Homework</h5>
                <br>
                <div class="col m12">
                  <%= @submission.content %>
                </div>
                <br>
                <br>
                <div class="col m12">
                  <h6><%=link_to "Submission Link", @submission.link %></h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
