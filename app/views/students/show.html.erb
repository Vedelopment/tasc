<!-- Student Profile Page -->

<div class="container">
  <br>
  <div class="row">
    <div class="col m4 profile-style">
      <img src="<%= @student.profile_image %>" alt="profile" class="center">
      <div class="row">
        <div class="col s4">
          <p> First: </p>
          <p> Last: </p>
          <p> User Name: </p>
          <p> Email: </p>
          <p> Slack: </p>
          <p> Github: </p>
          <p> Linkedin: </p>
        </div>
        <div class="col s8 center">
          <p><%=@student.first_name %></p>
          <p><%=@student.last_name %></p>
          <p><%=@student.user_name %></p>
          <p><%=@student.email %></p>
          <p><%=@student.slack %></p>
          <p><%=@student.github %></p>
          <p><%=@student.linkedin %></p>
        </div>
      </div>
      <div class="row">
        <div class="col s12 center">
          <% if @student == current_student %>
          <%= link_to "Edit", edit_student_path(current_student), class:"btn" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col m8">
      <div class="card">
        <div class="card-content">
          <p></p>
        </div>
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width">
            <% @student.courses.each do |c| %>
            <li class="tab"><%=link_to "#{c.name} #{c.number}", "##{c.id}"%></li>
            <% end %>
          </ul>
          <div class="card-content grey lighten-4">
            <% @student.courses.each do |c| %>
            <div id="<%= c.id %>">
              <div class="row">
                <p class="col s12">Assignments for <%= link_to "#{c.name} #{c.number}", course_path(c) %>:</p>
                <br>
                <br>
                <%c.assignments.each do |a|%>
                <p class="col m8">
                  <%= a.due_date.strftime("%m/%d/%Y") %> -
                  <%=link_to "#{a.title}", assignment_path(a) %>
                </p>
                <p class="col m4">
                  <% if @submissions.find_by({assignment_id: a.id}) %>
                  <%=link_to "Feedback", feedback_path(@submissions.find_by({assignment_id: a.id}).feedback) %>
                  <% end %>
                </p>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
