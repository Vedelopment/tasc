<!-- Edit Teacher Page -->

<div class="row">
  <br>
  <br>
  <div class="col m6 offset-m3 form form-style">
    <h4><b>EDIT YOUR PROFILE</b></h4>
     <%= form_for(@teacher, :url => {:action => 'update', :id => @teacher.id}) do |f| %>
    <div class="col m10 offset-m1">
      First Name:
      <br>
      <%= f.text_field :first_name, class: "form-control", placeholder: "#{@teacher.first_name}" %>
    </div>
    <div class="col m10 offset-m1">
      Last Name:
      <br>
      <%= f.text_field :last_name, class: "form-control", placeholder: "#{@teacher.last_name}" %>
    </div>
    <div class="col m10 offset-m1">
      Username:
      <br>
      <%= f.text_field :user_name, class: "form-control", placeholder: "#{@teacher.user_name}" %>
    </div>
    <div class="col m10 offset-m1">
      Email:
      <br>
      <%= f.text_field :email, class: "form-control", placeholder: "#{@teacher.email}" %>
    </div>
    <div class="col m10 offset-m1">
      Slack:
      <br>
      <%= f.text_field :slack, class: "form-control", placeholder: "#{@teacher.slack}" %>
    </div>
    <div class="col m10 offset-m1">
      Github:
      <br>
      <%= f.text_field :github, class: "form-control", placeholder: "#{@teacher.github}" %>
    </div>
    <h5 class="col m12">insert option to change password here.  user should have to correctly enter password to be given an option to change it, need to confirm it after typing it, too.</h5>

    <div class="row">
      <div class="col s12 center">
        <%= f.submit "Save Profile", class: "waves-effect waves-light btn-large form-button form-submit-style" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
