<h1>New Submission</h1>

<div class="row">
  Assignment submission for assignment:
  <br>
  <%= "#{@assignment.title}" %>
  <br>
  <%= "Due #{@assignment.due_date}" %>
  <br>
  <br>
  <div class="col m6 offset-m3 form">
    <%= form_for [@assignment, @submission], url: new_submission_path do |f| %>
    <div class="col m12">
      Content:
      <br>
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="col m12">
      Link:
      <br>
      <%= f.text_field :link, class: "form-control" %>
    </div>
    
    <!-- This is where the widget will be. Don't forget the name attribute! -->
    <input type="hidden" role="uploadcare-uploader" name="my_file" />

    <div class="col m6 offset-m3">
      <br>
      <%= f.submit "Save Submission", class: "waves-effect waves-light btn-large form-button" %>
      <br><br>
    </div>
    <% end %>
  </div>
